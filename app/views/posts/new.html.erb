<h1>新しい投稿</h1>
<%= form_with model: @post do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div>
        <%= form.label :content %>
        <%= form.text_area :content %>
        <%= form.file_field :image, accept: "image/*" %>
    </div>
    <div>
        <%= form.submit "投稿" %>
    </div>
<% end %>